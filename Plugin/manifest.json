{
	"manifest_version": 3,
	"name": "YouTube Shorts Blocker",
	"version": "1.1",
	"description": "YouTubeのショートコンテンツを非表示にします",
	"permissions": [
		"activeTab"
	],
	"content_scripts": [
		{
			"matches": [
				"*://*.youtube.com/*"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_idle"
		}
	],
	"icons": {
		"48": "icon48.png"
	}
}